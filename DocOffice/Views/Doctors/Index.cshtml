@{
  Layout = "_Layout";
}

@using DocOffice.Models;

<h1>Doctors</h1>

@if (@Model.Count == 0)
{
  <h3>No doctors have been added.</h3>
} 
else
{
  <ul>
    @foreach (Doctor doctor in Model)
    {
      <li>@Html.ActionLink($"{doctor.DoctorName}", "Details", new { id = doctor.DoctorId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add a new doctor", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>